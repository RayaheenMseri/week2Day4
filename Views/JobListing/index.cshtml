@model List<MYJobListing.Models.JobListing>

<h2>Job Listings</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Type</th>
            <th>Posted Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "JobListing", new { id = job.id })">@job.title</a></td>
                <td>@job.companyName</td>
                <td>@job.location</td>
                <td>@job.JobType</td>
                <td>Posted on: @job.PostedDate.ToString("MMM dd, yyyy")</td>
            </tr>
        }
    </tbody>
</table>
